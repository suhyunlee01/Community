<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>글 쓰기</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  </head>
  <body>

    <%- include('navbar.html')  %>

    <div class="container mt-4">
        <form method="POST" action="/save">
            <div class = "form-group">
                <label>제목</label>
                <input type = "text" name = "title" class="form-control">
            </div>
            <p></p>
            <div class = "txt-div">
                <label>내용</label>
                <textarea name = "content" rows = "10" class="form-control"></textarea>
            </div>
            <p></p>

            <div class ="txt-div">
                <label>작성일</label>
                <input type = "date" class = "form-control" name = "someDate">
            </div>
            <p></p>
            <button type = "submit" class = "btn btn-primary" style="float:right">저장</button>        
        </form>
        <div class ="txt-div">
          <form method="POST" action="/photo" enctype="multipart/form-data">
              <input type = "file" name = "picture" class="btn btn-outline-primary" accept="image/*"></input>
              <button type = "submit" class="btn btn-outline-secondary">첨부</button>
          </form>            
        </div>
        <p></p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>